{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@core/*": [
        "src/app/core/*"
      ],
      "@controllers/*": [
        "src/app/controllers/*"
      ],
      "@models/*": [
        "src/app/models/*"
      ],
      "@services/*": [
        "src/app/services/*"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/tests"
  ]
}