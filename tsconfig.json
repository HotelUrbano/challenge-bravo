{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@core/*": [
        "src/app/core/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@controllers/*": [
        "src/app/controllers/*"
      ],
      "@factories/*": [
        "src/database/factories/*"
      ],
      "@models/*": [
        "src/app/models/*"
      ],
      "@services/*": [
        "src/app/services/*"
      ],
      "@tests/*": [
        "src/tests/*"
      ],
      "@mocks/*": [
        "src/tests/mocks/*"
      ],
      "@utils/*": [
        "src/app/utils/*"
      ],
      "@errors/*": [
        "src/app/utils/errors/*"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}